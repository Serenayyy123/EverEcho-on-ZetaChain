{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "./scripts",
    "./test",
    "./typechain-types"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "backend",
    "frontend"
  ],
  "files": [
    "./hardhat.config.ts"
  ]
}
